{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "target": "es6",
    "outDir": "dist",
    "lib": ["es6"],
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
